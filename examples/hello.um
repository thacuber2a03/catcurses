import (
	cc = "../catcurses.um"
)

fn main() {
	t := stdTerminal()
	t.setRaw(true)
	t.setEcho(false)
	t.setHalfDelay(1)

	w := t.window
	w.keypad(true)

	x, y := 0, 0

	for true {
		c, ok := w.getKey()
		if c == Key('q') { break }

		switch c {
		case .left: x--
		case .right: x++
		case .up: y--
		case .down: y++
		}

		w.clear()
		w.printAt(x, y, "Hello from catcurses!")
		w.refresh()
	}

	t.destroy()
}

